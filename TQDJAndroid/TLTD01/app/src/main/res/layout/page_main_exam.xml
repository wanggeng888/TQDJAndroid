<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normalColor">

    <ImageView
        android:id="@+id/exam_img_tltd"
        android:layout_width="@dimen/bigLogoWidth"
        android:layout_height="@dimen/bigLogoHeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/login_img_tltd" />

    <Button
        android:id="@+id/page_exam_beginExam"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@id/exam_img_tltd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/selector_red_btn"
        android:text="@string/beginExam"
        android:textColor="@color/redBtnTxtColor"
        android:textSize="@dimen/redBigBtnTextSize" />

    <Button
        android:id="@+id/page_exam_updateExam"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/page_exam_beginExam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_red_btn"
        android:text="@string/updateExam"
        android:textColor="@color/redBtnTxtColor"
        android:textSize="@dimen/redBigBtnTextSize" />

</RelativeLayout>
